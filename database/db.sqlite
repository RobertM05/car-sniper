CREATE TABLE users (
    id INTEGER PRIMARY KEY,
    email TEXT UNIQUE,
    password TEXT
);

CREATE TABLE cars (
    id INTEGER PRIMARY KEY,
    vin TEXT,
    make TEXT,
    model TEXT,
    year INTEGER,
    km INTEGER,
    price INTEGER,
    url TEXT
);

CREATE TABLE alerts (
    id INTEGER PRIMARY KEY,
    user_id INTEGER,
    make TEXT,
    model TEXT,
    min_year INTEGER,
    max_km INTEGER,
    max_price INTEGER,
    FOREIGN KEY(user_id) REFERENCES users(id)
);
